
l1 : cmake_library {
  PATH "/usr/lib/cmake"
  CMAKE_MODULE "MN"
}

boost : cmake_library {
  CMAKE_MODULE "Boost"
  COMPONENTS "threads" "linux"
}

t1 : topic { FIELDS
    i : int32 0
    f : float32 0
    i8 : array { TYPE "int64" VALUES 0 1 0 2 0 3 0 4 }
    s : struct { FIELDS a : int32 0  i2 : array { VALUES 42 42 }}
}

t2 = t1

n : node {
    SUBSCRIBES
        t1 { TOPIC test_alias.t2 SUBSCRIBER pervasives.default_sub MAXLATENCY 1msec}
    PUBLISHES
        t2 { TOPIC test_alias.t1 PUBLISHER pervasives.default_pub}
    PERIOD 50msec
    CXX { HEADER   "alias.h"
          FILENAME "alias.cpp"
          LIB l1 boost
          CLASS "N" }
}