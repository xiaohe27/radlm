################ Pervasives

default_sub : subscriber {
    CXX { HEADER "radl_roslib.h" PATH "_radl_lib" CLASS "radl::Default_sub" }
}
default_pub : publisher {
    CXX { HEADER "radl_roslib.h" PATH "_radl_lib" CLASS "radl::Default_pub" }
}

################

l1 : cmake_library {
  PATH "/usr/lib/cmake"
  CMAKE_MODULE "MN"
}

boost : cmake_library {
  CMAKE_MODULE "Boost"
  COMPONENTS "threads" "linux"
}

t1 : topic { FIELDS
    i : int32 0
    f : float32 0
    i8 : array { VALUES 0 1 0 2 0 3 0 4 }
    s : struct { FIELDS a : int32 0  i2 : array { VALUES 42 42 }}
}

t2 = t1

n : node {
    SUBSCRIBES
        t1 { TOPIC test_alias.t2 SUBSCRIBER default_sub MAXLATENCY msec 1}
    PUBLISHES
        t2 { TOPIC test_alias.t1 PUBLISHER default_pub}
    PERIOD 50
    CXX { HEADER   "alias.h"
          FILENAME "alias.cpp"
          LIB l1 boost
          CLASS "N" }
}